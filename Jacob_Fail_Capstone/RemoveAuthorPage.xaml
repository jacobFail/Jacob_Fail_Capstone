<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jacob_Fail_Capstone.RemoveAuthorPage">
    <ContentPage.Content>
        <StackLayout>
			<Frame BackgroundColor="#2196F3" Padding="0" CornerRadius="0">
				<Label Text="Remove Author" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
			</Frame>
			
			<Editor Placeholder="Enter Author Name" x:Name="EnterAuthorNameEditor"/>

			<Button Text="Remove Author" x:Name="removeAuthorButton" Clicked="OnRemoveAuthorButtonClicked"/>

			<Label Text="*Removing an author will also remove their books*"/>

		</StackLayout>
    </ContentPage.Content>
</ContentPage>