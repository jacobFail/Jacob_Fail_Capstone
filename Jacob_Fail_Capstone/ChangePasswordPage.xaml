<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jacob_Fail_Capstone.ChangePasswordPage">
    <ContentPage.Content>
        <StackLayout>
			<Frame BackgroundColor="#2196F3" Padding="0" CornerRadius="0">
				<Label Text="Change Password" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
			</Frame>
			<Editor Placeholder="New Store Password" x:Name="PasswordEditor" />
			<Editor Placeholder="Confirm Store Password" x:Name="confirmPasswordEditor"/>
			<Button Text="Confirm" x:Name="confirmButton" Clicked="OnConfirmButtonClicked"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>