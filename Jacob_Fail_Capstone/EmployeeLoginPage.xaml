<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jacob_Fail_Capstone.EmployeeLoginPage">
    <ContentPage.Content>
        <StackLayout>
			<Frame BackgroundColor="#2196F3" Padding="0" CornerRadius="0">
				<Label Text="Employee Login" HorizontalTextAlignment="Center" TextColor="White" FontSize="36" Padding="10"/>

			</Frame>
			<Editor Placeholder="Enter Password" x:Name="EmployeePasswordEditor"/>
			<Button Text="Login" x:Name="LoginButton" Clicked ="OnLoginButtonClicked"/>
			



		</StackLayout>
    </ContentPage.Content>
</ContentPage>