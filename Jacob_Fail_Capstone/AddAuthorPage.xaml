<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jacob_Fail_Capstone.AddAuthorPage">
    <ContentPage.Content>
	
		<StackLayout>
			<Frame BackgroundColor="#2196F3" Padding="0" CornerRadius="0">
				<Label Text="Add Author" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
			</Frame>
			<Editor Placeholder="Enter Author Name" x:Name="authorNameEditor"/>
			<Button Text="+ Add" x:Name="SaveAuthorButton" Clicked="OnSaveAuthorButtonClicked"/>

		</StackLayout>
    </ContentPage.Content>
</ContentPage>